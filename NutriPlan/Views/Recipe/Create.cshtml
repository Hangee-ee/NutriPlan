@model NutriPlan.Models.Recipe
@using NutriPlan.Controllers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create Recipe";
}

<h2>Create New Recipe</h2>
<form class="form-check-inline" asp-action="Create" method="post">
    <div class="mb-3">
        <label>Name:</label>
        <input type="text" name="name" class="form-control" required></input>
    </div>
    <div class="mb-3">
        <label>Type:</label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<RecipeType>()" class="form-select"></select>
    </div>
    <div class="mb-3">
        <select class="form-select select2" name="selectedIngredients" multiple ="multiple" >
            <option value="">-- Select Ingredient --</option>
            @foreach (var ingredient in (List<NutriPlan.Models.Ingredient>)ViewData["Ingredients"])
            {
                <option value="@ingredient.IngredientId">@ingredient.Name</option>
            }
        </select>
    </div>


    <button type="submit" class="btn btn-success me-2">Add Recipe</button>
    <a asp-action="Index" class="btn btn-danger">Go Back</a>
</form>
